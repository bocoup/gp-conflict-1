/*
/// ---- Accents
$c_accent_primary:        hsla(0, 66%, 60%, 1);            // #dc5555
$c_accent_primary_dark:   darken($c_accent_primary, 40%);  // #511
$c_accent_primary_light:  lighten($c_accent_primary, 35%); // #fbeaea

/// ---- Text
$c_text_darkest:    hsla(0, 0%, 13.5%, 1);              // #222
$c_text_darker:     lighten($c_text_darkest, 13.6%);    // #444
$c_text_dark:       lighten($c_text_darkest, 26.9%);    // #666

$c_text_lightest:   hsla(0, 0%, 100%, 1);               // #fff
$c_text_lighter:    darken($c_chrome_lightest, 31.5%);  // #aaa
$c_text_light:      darken($c_chrome_lightest, 44.5%);  // #888

*/

@import 'fonts.styl';
@import 'tipsy.styl';
@import 'theme.styl';

body {
  background-color: $c_chrome_lightest;
  font-family: MuseoSans;
  margin: 0;
  padding: 0;
  color: rgb(34, 34, 34);
}

#container {
  height: 520px;
  overflow: hidden;
  border-bottom: 1px solid $c_chrome_lighter;
  position: relative;
  max-width: 1064px;
  margin: auto;

  h1 {
    color: rgb(34, 34, 34);
    font-size: 2em;
    line-height: 1.3em;
    font-family: MuseoSansBold;
    font-weight: 900;
  }

  p {
    line-height: 1.5454545455em;
  }
}

#map, .map {
  /* transform: scale(1); needed for raster lineup w map overlay. not sure why */
  /*float:right;
  position: relative; */

  svg {
/*    position: absolute;
    top: 0;
    left: 0;*/
    width: 100%;
    height: 100%;

    .land {
      fill: #fff;
      fill-opacity: 0;
    }
    .land.selected {
      fill: orange;
      opacity: 0.2;
    }

    .countryname {
      font-family: MuseoSansMedBold;
      fill: $c_text_darker;
      text-anchor: middle;
      font-size: 16px;
    }

     g.city {
      text {
        fill: #444;
        font-variant: small-caps;
      }

      circle {
        fill: none;
        stroke: #888;
        stroke-width: 1.5px;
        font-size: 16px;
      }
    }

    g.capital path {
      stroke: #dc5555;
      stroke-width: 2px;
      fill: none;
    }
  }
}

#mapContainer {
  float: right;
  display: inline-block;
  overflow:hidden;
  height: 100%;
}

#content {

  border-radius: 15px;
}

.legend {
  position: absolute;
  bottom: 0px;
  right: 20px;
}


$padding : 3%


#content {
  span.icon-info2 {
    font-family: 'icomoon';
    content: "\e601";
    float: right;
    padding-right: 20px;
    color: $c_text_light;
    cursor: pointer;
  }

  span.icon-info2:hover {
    color: #222;
  }
}
.contentbody {
  display: none;
}

.footer {
  font-size: .6em;
  font-family: MuseoSansLight;
  width: 100%;
  position: absolute;
  bottom: 3px;
}

.col-40 {
  width: 97%;
  float:left;
  margin-left: 3%;
}

.col-60 {
  width: 97%;
  float:right;
  margin-left: 3%;
}

@media screen and (min-width: 900px) {
  .col-40 {
    width: 34%;
  }

  .col-60 {
    width: 60%;
  }

  .contentbody {
    display: inherit;
  }

  h1 {
    span.icon-info2  {
      display:none;
    }
  }

}

@media screen and (min-width: 900px) and (max-width: 1400px) {
  #content {
    h1 {
      font-size: 24px;

      span.icon-info2  {
        display:none;
      }
    }

    .contentbody {
      display: inherit;
      font-size: 0.9em;
    }
  }


  .col-40 {
    width: 27%
  }

  .col-60 {
    width: 67%
  }
}

