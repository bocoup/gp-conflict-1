#map path {
  fill: none;
  stroke: #fff;
  stroke-width: .5px;
  stroke-linejoin: round;
}

#map path[name='Antarctica'] {
  fill: none;
  stroke: none;
}

#map line {
  stroke-linecap: round
}

#map-3 {

  padding: 20px;

  div.graph {
    float: left;

   .axes {
      line {
        stroke: #222
        stroke-width: 0.5px
      }
    }

    .lines {
      line {
        stroke: red
        stroke-width: 1px;
      }
    }
  }
}