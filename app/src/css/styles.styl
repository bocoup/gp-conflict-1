#map path {
  fill: none;
  stroke: #fff;
  stroke-width: .5px;
  stroke-linejoin: round;
}

#map path[name='Antarctica'] {
  fill: none;
  stroke: none;
}

#map line {
  stroke-linecap: round
}

#map {
  .circles {
    circle {
      fill: teal;
    }

    circle:hover {
      cursor: pointer;
    }
  }

  .callout {
    position: absolute;
    z-index: 100;
    width: 300px;
    margin: 20px;
    margin-left: 60px;
    background-color: white;
    padding: 20px;
  }

  .legend {
    position: absolute;
    z-index: 100;
    width: 300px;
    bottom: 20px;
    height: 200px;
    margin-left: 60px;
  }

  .leaflet-popup-pane {
    z-index: 200;
  }

  a {
    cursor: pointer;
  }
}
#map-3 {

  padding: 20px;

  div.graph {
    float: left;

   .axes {
      line {
        stroke: #222
        stroke-width: 0.5px
      }
    }

    .lines {
      line {
        stroke: red
        stroke-width: 1px;
      }
    }
  }
}

