#map {

  width: 670px;
  margin: 0 auto;

  img {
    width: 640px;
    margin-left: -7px;
    margin-top: 5px;
  }

  svg {
    background-size: cover;
    background-position: -23px -9px;
  }

}

g.waffle, .legend, .other {
  rect {
    fill: red;
  }

  rect.outline {
    fill: none;
    stroke: black;
    stroke-width: 2px;
  }
}

.tipsy span.val {
  font-family: MuseoSansMedBold;
}

.other {
  position: absolute;
  bottom: 174px;
  left: 40px;
}

@media screen and (min-width: 900px) {
  .other {
    bottom: 75px;
    right: 40px;
    left: auto;
  }
}

@media screen and (max-width: 460px) {
  .other {
    display: none;
  }
}

